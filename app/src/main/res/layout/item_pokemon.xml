<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pokemonViewModel"
            type="id.ac.ui.cs.mobileprogramming.andriansyah.helloworld.viewmodels.ItemPokemonViewModel"/>
    </data>


    <RelativeLayout
        android:id="@+id/item_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{pokemonViewModel::onItemClick}"
        android:padding="@dimen/spacing_xsmall">

        <TextView
            android:id="@+id/label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="#B5051B"
            android:gravity="center"
            android:text="@{pokemonViewModel.pokemonName}"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="mr gary allen" />

    </RelativeLayout>
</layout>